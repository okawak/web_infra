[Interface]
Address = 192.168.1.1/24
SaveConfig = true
ListenPort = 51820
PrivateKey = {{ privatekey }}
PostUp = iptables -A FORWARD -i wg0 -j ACCEPT; iptables -A FORWARD -o wg0 -j ACCEPT; iptables -t nat -A POSTROUTING -o eth5 -j MASQUERADE
PostDown = iptables -D FORWARD -i wg0 -j ACCEPT; iptables -D FORWARD -o wg0 -j ACCEPT; iptables -t nat -D POSTROUTING -o eth5 -j MASQUERADE

[Peer]
PublicKey = {{ client1_publickey }}
PresharedKey = {{ presharedkey }}
AllowedIPs = 192.168.1.2/32

[Peer]
PublicKey = {{ client2_publickey }}
PresharedKey = {{ presharedkey }}
AllowedIPs = 192.168.1.3/32

[Peer]
PublicKey = {{ client3_publickey }}
PresharedKey = {{ presharedkey }}
AllowedIPs = 192.168.1.4/32
